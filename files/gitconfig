[alias]
  ls      = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  filelog = log -u # see all the commits related to a file
  graph   = log --all --graph --decorate --oneline
  fl      = log -u
  last    = log -1 HEAD
  find    = "!git ls-files | grep -i"
  la      = "!git config -l | grep alias | cut -c 7-" # list all aliases

  st      = status
  cl      = clone
  ci      = commit
  co      = checkout
  br      = branch
  diff    = diff --word-diff
  dc      = diff --cached
  m       = merge

[status]
  short   = true
